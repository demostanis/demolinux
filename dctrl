#!/bin/sh
# demolinux VM control script
#  Usage: ./dctrl [shell|pull|push] [src [dest]]

common_opts=( 60022 -o StrictHostKeyChecking=no )

shell(){
	ssh -p ${common_opts[@]} demostanis@localhost
}

pull(){
	scp -rP ${common_opts[@]} demostanis@localhost:"$1" "${2:-.}"
}

push(){
	scp -rP ${common_opts[@]} "$1" demostanis@localhost:"${2:-.}"
}

case $1 in
	shell) shell ;;
	pull) pull "${@:2}" ;;
	push) push "${@:2}" ;;
	*) sed -n '2,3s/# //p' "$0" ;;
esac
