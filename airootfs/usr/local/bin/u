#!/bin/sh

term=$(echo ${@:-'ur stupid'} | sed 's/ /+/g')
curl -G https://urbandictionary.com/define.php -sL --data "term=$term" | \
  xmllint --html --xpath '//*[@class="break-words meaning mb-4"]' - 2>/dev/null | \
  head -1 | xmllint --xpath '//text()' - | tr -d \\n | \
  sed 's/&#13;/\n/g'
echo
