modkeypress() {
	./dctrl shell<<EOC
export DISPLAY=:0
xdotool keydown Super_L
sleep 0.2
xdotool key $1
sleep 0.1
xdotool keyup Super_L
EOC
}

expectwin() {
	./dctrl shell<<EOC
export DISPLAY=:0
for i in {1..10}; do
	if xwininfo -root -tree | grep '"$1"' >/dev/null 2>&1; then
		exit
	fi
	sleep 1
done
echo did not find window $1 after 10 seconds >&2
exit 1
EOC
}

# vim:set ft=bash:
